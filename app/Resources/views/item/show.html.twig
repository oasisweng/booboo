{% extends 'base.html.twig' %}

{% block body %}
    <h2>Item Detail Page</h2>
    <div class="row">
    	<div class="4u 12u(mobile)"> 
    		<label> Item Name</label>
    		<img src ="{{ asset('assets/images/item.jpg')}}" width = "50%" height="50%" class="img-responsive">
    	</div>
    	<div class="8u 12u(mobile)"> 
    		<div class="row.30">
    			<label>Category :</label>
    		</div>
    		<div class="row.30">
				<label>Description :</label>
			</div>
			<div class="row.30">
				<label>Time Left :</label>
			</div>
			<div class="row.30">
				<label>Â£ Current Price</label>
			</div>
			<div class="container">
            <!-- Button trigger modal -->
            <a data-toggle="modal" data-target="#modalTable"> bid history</a>
                <div class="modal fade" id="modalTable" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span></button>
                            </div>
                        <div class="modal-body">
                            <table id="table"
                                data-toggle="table"
                                data-height="299"
                                data-url="../json/data1.json">
                              <thead>
                                <tr>
                                    <th data-field="id">ID</th>
                                    <th data-field="name">Item Name</th>
                                    <th data-field="price">Item Price</th>
                                </tr>
                               </thead>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div><!-- /.container -->
			
			<div class="3u 12u(mobile)"> 
				<input type="text" name='bid'/>
                <button class="btn btn-def btn" type="button">Place Bid</button>
			</div>
			<div class="row.30">
				<label>View :</label>
			</div>
			<div class="row.30">
				<label>Seller :</label>
				 <a href="{{ path('user_show', {'userId': 1}) }}">seller profile</a>
			</div>
    	</div>
    </div>

<script>
    var $table = $('#table');
    $(function () {
        $('#modalTable').on('shown.bs.modal', function () {
            $table.bootstrapTable('resetView');
        });
    });
</script>

<style>
	.row{
		margin-top: 2em;
	}
</style>
{% endblock %}
