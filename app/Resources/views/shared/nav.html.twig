<!-- Header -->
<div id="header-wrapper">

    <!-- fixing nav bar issue on other pages excluding home page -->

    {% if app.request.attributes.get('_route') == "homepage" %}
    <div id="header" class="container">
    {% else %}    
    <div id="header" class="container"style="padding-top: 0.3em;">
    {% endif %}    
        <!-- Nav -->

        <nav id="nav">
            <ul>
                <li><a class="icon fa-home" href="{{ path('homepage')}}"><span>Home</span></a></li>
                <li><a class="icon fa-tag" href="#"><span>Categories</span></a>
                    <ul>
                        <li><a href="{{ path('auction_category',{'categoryName':'E-books'})}}">E-books</a></li>
                        <li><a href="{{ path('auction_category',{'categoryName':'E-Pets'})}}">E-Pets</a></li>
                        <li><a href="{{ path('auction_category',{'categoryName':'Game Items'})}}">Game Items</a></li>
                        <li><a href="{{ path('auction_category',{'categoryName':'Prepaid Time Cards'})}}">Prepaid Time Cards</a></li>
                        <li><a href="{{ path('auction_category',{'categoryName':'Trade Cards'})}}">Trade Cards</a></li>
                        <li><a href="{{ path('auction_category',{'categoryName':'Tutorials'})}}">Tutorials</a></li>
                    </ul>
                </li>
                {% if app.session.get('userID') is not null %}
                <li><a class="icon fa-user" href="{{ path('user_show', {'userID': app.session.get('userID')})}}"><span>My Profile/Feed </span></a></li>
                <li><a class="icon fa-sign-out" href="{{ path('user_logout')}}"><span>Sign Out</span></a></li>
                {% else %}
                <li><a class="icon fa-sign-in" href="{{ path('user_login')}}"><span>Sign In/ Register</span></a></li>
                {% endif %}


                <!-- method of linking via id to jump to contact us area possible? -->
                 <li><a class="icon fa-question" href="{{ path('homepage')}}#contact"><span>Contact Us</span></a></li>  
                <a class="navbar-right">
                    <!-- to include search bar in top navi for other pages outside of HOME/INDEX -->
                    {% if app.request.attributes.get('_route') != "homepage" and app.request.attributes.get('_route') != "auction_search" %}
                        <form class="navbar-form" action="{{path('auction_search')}}" method="get" target="_self">
                        <div class="form-group">
                            <input type="text" id="indexonly" name="keywords" placeholder="Enter search" class="keywords form-control">
                        </div>
                        <button type="submit" class="btn btn-def btn">Search</button>
                    </form>
                    {% endif %}
                </a>
            </ul>
        </nav>
        {% if app.request.attributes.get('_route') == "homepage" %}
        <!--row:1 Index page title section -->
        <h1 id="logo">Boo Boo.</h1>
        <p>The fanciest auction system</p>
        <br>
        <form class="navbar-form" action="{{path('auction_search')}}" method="get" target="_self">
            <div class="form-group">
                <input type="text" id="indexonly" name="keywords" placeholder="Enter search" class="keywords form-control">
            </div>
            <button type="submit" class="btn btn-def btn">Search</button>
        </form>
        {% endif %}
    </div>
</div>
