{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
<div class="container">
	<div class="col-md-6 col-md-offset-3">
    	<h2>Leave Feedback</h2>
      <div class="row.10">
        <label>Item Name:</label>{{ auction.item.itemName}}
      </div>

      <div class="row.10">
        <label>Receiver:</label> {{ receiver.name}}
      </div>

      <div class="row.10">
        <label>Giver:</label> {{ giver.name}}
      </div>
      <br><br><br>
    	{{ form_start(form) }}
    	{{ form_errors(form) }}
      <div class="row">
    		{{ form_label(form.rating, "Rating : ") }}
        {{ form_errors(form.rating) }}
        {{ form_widget(form.rating, {'attr': {'class': 'col-md-10 row'}}) }}
    	</div>
      <br>
    	<div class="row.10">
          {{ form_label(form.comment, "Feedback:") }}
          {{ form_errors(form.comment) }}
          <div class="form-group input-group" >
            <span class="input-group-addon"></span>
            {{ form_widget(form.comment) }}
          </div>
      </div>
    	<br>
      <div>
          {{ form_widget(form.finish, {'attr': {'class': 'col-md-6 col-md-offset-4 btn btn-def'}}) }}
      </div>
    	{{ form_end(form) }}
	</div>
</div>
{% endblock %}


