{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="col-md-8 col-md-offset-2">
	<h2>Search Result</h2>
	<div class="row">
	{{ form_start(filter_form) }}
	{{ form_errors(filter_form) }}

		{{ form_label(filter_form.categories) }}
        {{ form_errors(filter_form.categories) }}
        <div class="row">
            {{ form_widget(filter_form.categories) }}
    	</div>
    	<div>
            {{ form_widget(filter_form.filter, {'attr': {'class':  'col-md-6 col-md-offset-4 btn btn-def'}}) }}
        </div>
	{{ form_end(filter_form) }}
	</div>
    <table class="table table-striped">
        <thead><tr>
        		<td><label>Item </label></td>
        		<td><label>Image </label></td>
        		<td><label>Seller </label></td>
        	</tr></thead>
           <tbody>
               {% for auction in auctions %}
               <tr>
                   <td><a href="{{ path('auction_show', {'auctionID': auction.id})}}">{{ auction.id }}</a></td>
                   <td><center><img src="http://placehold.it/100/bbbbbb/fff&amp;text={{ auction.id }}" class="img-responsive"></center></td>
                   <td>..</td>
               </tr>
               {% endfor %}    
           </tbody>
       </table>
	</div>
</div>
{% endblock %}
