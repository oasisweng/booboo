{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="col-md-8 col-md-offset-2">
    <h2>Auction Detail</h2>
    <div class="row">
    	<div class="col-md-4">
    	<label> {{ auction.item.itemName}}</label>
    	<img src="http://placehold.it/500/bbbbbb/fff&amp;text={{ auction.id }}" class="img-responsive">
		</div>
		<div class="col-md-6">
    	<div class="row.30">
    			<label>Category :</label> {{ auction.item.categoryID}}
    		</div>
    		<div class="row.30">
				<label>Description :</label>{{ auction.item.description}}
			</div>
			<div class="row.30">
				<label>Time Left :</label>
			</div>
			<div class="row.30">
				<label>Â£ Current Price :</label> {{ auction.currentBid}}
			</div>
			<div class="container">
            <!-- Button trigger modal -->
            <a data-toggle="modal" data-target="#modalTable"> bid history</a>
                <div class="modal fade" id="modalTable" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span></button>
                            </div>
                        <div class="modal-body">
                            <table id="table"
                                data-toggle="table"
                                data-height="299"
                                data-url="../json/data1.json">
                              <thead>
                                <tr>
                                    <th data-field="id">ID</th>
                                    <th data-field="name">Item Name</th>
                                    <th data-field="price">Item Price</th>
                                </tr>
                               </thead>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div><!-- /.container -->
            <div class="row.30"> 
            	{{ include('bid/bid.html.twig', {'bid_form': bid_form }) }}
			</div>
			<div class="row.30">
				<label>View :</label> {{ auction.viewCount}}
			</div>
			<div class="row.30">
				<label>Seller :</label>
				 <a href="{{ path('user_show', {'userID': auction.sellerID})}}">seller profile</a>
			</div>
		</div>

	</div>
    </div>
</div>
{% endblock %}
