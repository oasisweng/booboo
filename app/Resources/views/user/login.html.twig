                    <a class="navbar-right">    
                    <!-- to include search bar in top navi for other pages outside of HOME/INDEX -->    
                    </a>
                </ul>


            </nav>

                
 

        </div>
    </div>

<div class="container">     		
    <div class="col-md-6 col-md-offset-3">
    	   <h2>Sign in</h2>
    		{{ form_start(form) }}
    			{{ form_errors(form) }}
    		<div>
              {{ form_label(form.name, "UserName") }}
              {{ form_errors(form.name) }}
              <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                {{ form_widget(form.name) }}
              </div>
            </div>
            <div>
              {{ form_label(form.password) }}
              {{ form_errors(form.password) }}
              <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                {{ form_widget(form.password) }}
              </div>
            </div>
			<div class="form-group text-center">
            	<a href="#">Forgot Password</a>&nbsp;|&nbsp;<a href="{{ path('user_registration')}}">Register</a>
          	</div>
    		<div>
                {{ form_widget(form.login, {'attr': {'class': 'col-md-9 col-md-offset-3 btn btn-def'}}) }}
            </div>
          	{{ form_end(form) }}
    </div> 
</div>

{% endblock %}
