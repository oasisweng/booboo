        <div id="header" class="container">
            <!-- Nav -->
            <nav id="nav">
                <ul>
                        <li><a class="icon fa-home" href="{{ path('homepage')}}"><span>Home</span></a></li>
                        <li><a class="icon fa-tag" href="#" ><span>Categories</span></a>
                                        <ul>
                                            <li><a href="#">Lorem ipsum dolor</a></li>
                                            <li><a href="#">Magna phasellus</a></li>
