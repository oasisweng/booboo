                                            <li><a href="#">Veroeros feugiat</a></li>
                                        </ul>
                        </li>
                        {% if is_logged_in %}
                            <li><a class="icon fa-user" href="{{ path('user_show')}}"><span>My Profile/Feed </span></a></li>
                            <li><a class="icon fa-sign-out" href="{{ path('user_logout')}}"><span>Sign Out</span></a></li>
                        {% else %}
                            <li><a class="icon fa-sign-in" href="{{ path('user_login')}}"><span>Sign In/ Register</span></a></li>
                        {% endif %}
