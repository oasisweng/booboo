{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="col-md-6 col-md-offset-3">
    <h2>Change Password</h2>
	{{ form_start(form) }}
    	{{ form_errors(form) }}
    <div>
        {{ form_label(form.password, "Current Password")}}
        {{ form_errors(form.password) }}
        <div class="form-group input-group">
             <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
             {{ form_widget(form.password) }}
 		</div>
    </div>
    <br>
    <div>
        {{ form_label(form.newPassword.first, "New Password")}}
        {{ form_errors(form.newPassword.first)}}
        <div class="form-group input-group">
             <span class="input-group-addon"><i class="fa fa-expeditedssl"></i></span>
            {{ form_widget(form.newPassword.first)}}
        </div>
    </div>
    <br>
    <div>
        {{ form_label(form.newPassword.second, "Confirm New Password")}}
        {{ form_errors(form.newPassword.second)}}
        <div class="form-group input-group">
             <span class="input-group-addon"><i class="fa fa-expeditedssl"></i></span>
            {{ form_widget(form.newPassword.second)}}
        </div>
    </div>
    <div>
         {{ form_widget(form.save, {'attr': {'class': 'col-md-6 col-md-offset-4 btn btn-def'}}) }}
    </div>
    {{ form_end(form) }}
    </div>
</div> 
{% endblock %}
